{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"model": "opencode/claude-opus-4-5",
	"default_agent": "plan",
	"mcp": {
		"next-devtools": {
			"type": "local",
			"command": ["npx", "-y", "next-devtools-mcp@latest"]
		},
		"Sentry": {
			"type": "remote",
			"url": "https://mcp.sentry.dev/mcp/planned/planned-ui"
		},
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		}
	},
	"autoshare": false,
	"autoupdate": true
}
